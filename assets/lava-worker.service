[Unit]
Description=LAVA worker
After=network.target remote-fs.target

[Service]
Type=simple
Environment=URL=http://localhost/ LOGLEVEL=INFO
EnvironmentFile=-/etc/default/lava-worker
EnvironmentFile=-/etc/lava-dispatcher/lava-worker
ExecStart=/usr/local/bin/lava-worker --level $LOGLEVEL --url $URL $TOKEN $WORKER_NAME $WS_URL $HTTP_TIMEOUT
TimeoutStopSec=20
Restart=always
KillMode=process

[Install]
WantedBy=multi-user.target